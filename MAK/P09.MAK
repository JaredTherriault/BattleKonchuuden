#*--+----1----+----2----+----3----+----4----+----5----+----6----+----7----+--*/
STAFF_DEP =        ../lib/libdbg.h          ../lib/libfio.h          \
                   ../lib/mainsys.h         ../lib/grpara.h          \
                   ../lib/sysara.h          ../lib/comara.h          \
                   ../lib/staff.h           \
                   ../lib/istatic.h         \
                   ../redlib/sndno.h

#*--+----1----+----2----+----3----+----4----+----5----+----6----+----7----+--*/
#*  SOURCE COMPILE                                                           */
#*--+----1----+----2----+----3----+----4----+----5----+----6----+----7----+--*/
$(P09_DIR)/staff.obj: $(P09_DIR)/staff.c $(STAFF_DEP)
    $(CC) $(CCFLGS) $(P09_GRP) $(P09_DIR)/staff.c

$(P09_DIR)/anmdata.obj: $(P09_DIR)/anmdata.c $(P09_DIR)/sprite/roll.c $(STAFF_DEP)
